FROM php:8.2-fpm

WORKDIR /var/www/html
RUN apt-get update && apt-get install -y \
    libfreetype-dev \
    libjpeg62-turbo-dev \
    libpng-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd

RUN npm install
RUN npm run build
RUN echo npm -v
